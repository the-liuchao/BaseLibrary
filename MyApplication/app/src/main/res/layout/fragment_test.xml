<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.liuming.mylibrary.widge.TitleBar
        android:id="@+id/titlebar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="测试标题"
        app:title_color="#FFFFFF"
        app:title_size="20sp"
        app:left_icon="@mipmap/btn_back"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textColorHint="@color/colorPrimary"
        android:textOff="关"
        android:textOn="开"
        android:thumbTint="#f90" />

    <SeekBar
        android:id="@+id/download_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:progressTint="#ff0000"
        android:secondaryProgressTint="#ffff00" />

    <TextView
        android:id="@+id/add_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#123"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="添加"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/upload_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:thumbTint="#ff0" />

    <TextView
        android:id="@+id/test_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#123"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="OkHttp下载"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/test_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#123"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="OkHttp上传"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/show_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside" />


</LinearLayout>